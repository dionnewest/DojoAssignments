<html>
	<head>
		<title>Dojo Suvey: Results</title>
		<style type='text/css'>
            .header{
            	width:466px;
                border:2px solid black;
                padding: 5px;
            }
            .space{
                padding-top:3px;
                padding-bottom:3px;
            }
            label{
                vertical-align: top;
            }
            input[type="text"]{
                width: 200px;
                float:right;
                position:relative;
                left:-5px;
            }
            input[type="submit"]{
                float:right;
                position:relative;
                left:-5px;
                background-color: #6881aa;
                color:white;
            }
            #form, #container{
                width:466px;
                border:2px solid black;
                padding: 5px;
                height:255px;
            }
            #info_needed, #info_submitted{
                text-align:left;
                width:49%;
                display:inline-block;
                vertical-align: top;
            }
            #info_needed p, #info_submitted p{
                margin:2px;
            }
            h2{
                text-decoration:underline;
            }
            .go_back{
                margin-top:80px;
            }
        </style>
	</head>	
	<body>
		<div id='container'>
			<h2>Submitted Info</h2>
			<div id="info_needed">
				<p>Name:</p>
				<p>Dojo Location:</p>
				<p>Favorite Language</p>
				<p>Comment</p>
			</div>
			<div id="info_submitted">
				<p><%= body.name %></p>
				<p><%= body.location %></p>
				<p><%= body.language %></p>
				<p><%= body.comment %></p>
			</div>
            <a href='/' class='space go_back'><button>Go Back</button></a>
		</div>
	</body>
</html>